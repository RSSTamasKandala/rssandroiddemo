<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="comicsItem"
            type="org.rss_examples.rssmarveldemo.viewmodels.characterdetail.VmCharacterDetailComicsItem" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/comic_item_image"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:paddingEnd="@dimen/shadow_padding"
            android:paddingBottom="@dimen/shadow_padding"
            android:background="@drawable/shadow_bg"
            bind:loadSimpleImage="@{comicsItem.picUrl}" />



    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:left="0dp"
